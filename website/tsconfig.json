{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES6"
  },
  "include": [
    "./src/**/*",
    "./src/*"
  ]
}